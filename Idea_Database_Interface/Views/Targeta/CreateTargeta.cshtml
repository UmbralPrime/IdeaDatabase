@model Idea_Database_Interface.Viewmodels.TargetaCrudViewModel
@{
    ViewData["Title"] = "Crear comercio";
}
<h1 class="mt-5">@ViewData["Title"]</h1>
<div class="row mt-8">
    <form asp-action="CreateTargeta" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-md-8">
            <div class="form-group" style="padding: 10px">
                <label asp-for="Nombre" class="control-label">Nombre comercial <span class="text-danger">*</span></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="IAE" class="control-label">IAE <span class="text-danger">*</span></label>
                <input asp-for="IAE" class="form-control" />
                <span asp-validation-for="IAE" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Correo" class="control-label">@Html.DisplayNameFor(model => this.Model.Correo) <span class="text-danger">*</span></label>
                <input type="email" asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="CódigoFUC" class="control-label">Código FUC <span class="text-danger">*</span></label>
                <input asp-for="CódigoFUC" class="form-control" />
                <span asp-validation-for="CódigoFUC" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="TeléfonoFijo" class="control-label">Teléfono Fijo</label>
                <input asp-for="TeléfonoFijo" class="form-control" />
                <span asp-validation-for="TeléfonoFijo" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="TeléfonoMóvil" class="control-label">Teléfono Móvil</label>
                <input type="text" asp-for="TeléfonoMóvil" class="form-control" />
                <span asp-validation-for="TeléfonoMóvil" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Dirección" class="control-label">@Html.DisplayNameFor(model => this.Model.Dirección) <span class="text-danger">*</span></label>
                <input asp-for="Dirección" class="form-control" />
                <span asp-validation-for="Dirección" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group" style="padding: 10px">
                <input type="submit" value="Crear" class="btn" style="background-color: aqua !important; color: white !important;" />
                <a asp-action="Index" class="btn" style="background-color: aqua !important; color: white !important;">Volver</a>
            </div>
        </div>
    </form>
</div>

