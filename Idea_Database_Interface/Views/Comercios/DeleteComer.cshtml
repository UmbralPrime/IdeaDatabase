@model Idea_Database_Interface.Viewmodels.ComercioDetailViewModel
@{

}
<h2>Estás seguro de que quieres borrar el Comercio de @Model.Comercio.Nombre?</h2>
<form asp-action="DeleteComer" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" />
    <a asp-controller="Comercios" asp-action="Details" asp-route-id="@Model.Comercio.Id" class="btn" style="background-color: aqua !important; color: white !important;">Volver</a>
    <input type="submit" value="Borrar" asp-action="DeleteComer" asp-route-id="@Model.Comercio.Id" class="btn btn-danger" />
</form>

