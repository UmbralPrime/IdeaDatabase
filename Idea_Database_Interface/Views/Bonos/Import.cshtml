@model Idea_Database_Interface.Viewmodels.FileUpload
@{
    ViewData["Title"] = "Importar";
}

<form enctype="multipart/form-data" method="post">
    @if (!string.IsNullOrEmpty(Model.AlertMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.AlertMessage
        </div>
    }
    <dl>
        <dt>
            <label asp-for="@Model.FormFile"></label>
        </dt>
        <dd>
            <input asp-for="@Model.FormFile" type="file" name="FileUpload">
            <span asp-validation-for="@Model.FormFile"></span>
        </dd>
    </dl>
    <input asp-page-handler="Upload" class="btn" type="submit" value="Enviar" />
</form>
