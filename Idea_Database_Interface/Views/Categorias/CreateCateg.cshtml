@model Idea_Database_Interface.Viewmodels.CategoriaCrudViewModel
@{
    ViewData["Title"] = "Crear categoría";
}
<h3 class="display-4">Crear una categoría</h3>
<br/>
<form asp-action="CreateCateg" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" />
    <div class="col-md-8">
        <div class="form-group" style="margin: 10px">
            <label asp-for="Year" class="contol-label">Año <span class="text-danger">*</span></label>
            <select class="form-control" asp-items="Model.Years" asp-for="Year"></select>
        </div>
        <div class="form-group" style="margin: 10px">
            <label asp-for="Nombre" class="control-label">@Html.DisplayNameFor(model => this.Model.Nombre) <span class="text-danger">*</span></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        
        <div class="form-group" style="padding: 10px">
            <label asp-for="IsActive" class="form-check-label">Activo</label>
            <input type="checkbox" asp-for="IsActive" class="form-check-input" />
        </div>
        
    </div>
    <div class="form-group" style="margin: 10px">
        <input type="submit" value="Crear" class="btn" style="background-color: aqua !important; color: white !important;" />
        <a asp-controller="Categorias" asp-action="Index" class="btn" style="background-color: aqua !important; color: white !important;">Volver</a>
    </div>
    <br />
    
</form>
